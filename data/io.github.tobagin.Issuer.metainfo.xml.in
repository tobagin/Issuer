<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>@ID@</id>
  <metadata_license>CC0-1.0</metadata_license>
  <project_license>GPL-3.0+</project_license>
  <name>@NAME@</name>
  <summary>A modern, native GTK4/LibAdwaita Github issues tracker</summary>
  <description>
    <p>
      A barebone GNOME application template that serves as a starting point for multiple GNOME applications.
      The template integrates core GNOME technologies (GTK4, LibAdwaita, ATK, Blueprint, Vala, Meson) and
      includes flatpak packaging configuration.
    </p>
    <p>Features:</p>
    <ul>
      <li>Modern GTK4 and LibAdwaita design</li>
      <li>Blueprint UI definitions</li>
      <li>Comprehensive logging system</li>
      <li>Settings management</li>
      <li>Internationalization support</li>
      <li>Flatpak packaging ready</li>
    </ul>
  </description>
  <screenshots>
    <screenshot type="default">
      <image>https://raw.githubusercontent.com/tobagin/app_template/main/data/screenshots/main.png</image>
    </screenshot>
  </screenshots>
  <url type="homepage">https://github.com/tobagin/app_template</url>
  <url type="bugtracker">https://github.com/tobagin/app_template/issues</url>
  <developer_name>Thiago Fernandes</developer_name>
  <launchable type="desktop-id">@ID@.desktop</launchable>
  <provides>
    <binary>issuer</binary>
  </provides>
  <releases>
    <release version="@VERSION@" date="2025-09-21">
      <description>
        <p>Initial release of Issuer</p>
        <ul>
          <li>Basic GTK4/LibAdwaita application structure</li>
          <li>Blueprint UI integration</li>
          <li>Settings management</li>
          <li>Logging system</li>
        </ul>
      </description>
    </release>
  </releases>
</component>